<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "STEPS Project", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home",   root_path %></li>
        <li><%= link_to "Help",   help_path %></li>
        <% if user_signed_in? %>
          <li><%= link_to "Users", users_path %></li>
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <%= current_user.fullname %> 
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to 'My Account', current_user %></li>
              <li><%= link_to 'Edit Profile', edit_user_registration_path %></li>
              <li><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>
            </ul>
          </li>
          <li><%= link_to image_tag(current_user.avatar.url(:thumb), :class => "round-image-50"), current_user, class: "page-avatar" %></li>
        <% elsif student_signed_in? %>
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <%= current_student.fullname %>
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to 'My Account', current_student %></li>
              <li><%= link_to 'Edit Profile', edit_student_registration_path %></li>
              <li><%= link_to 'Log out', destroy_student_session_path, method: :delete %></li>
            </ul>
          </li>
          <li><%= link_to image_tag(current_student.avatar.url(:thumb), :class => "round-image-50"), current_student, class: "page-avatar" %></li>
        <% else %>
          <li><%= link_to 'Log In/Sign Up', login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
