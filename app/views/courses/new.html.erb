<h1>Create New Course</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for([@user,@course]) do |f| %>
        <div class="form-group field">
          <%= f.label :course_name %>
          <%= f.text_field :course_name, placeholder: "Name of Course", autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group field">
          <%= f.label :course_sequence_number %>
          <%= f.text_field :course_sequence_number, placeholder: "123456", autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group field">
          <%= f.label :period %>
          <%= f.select(:period, options_for_select(Course.period, @course.period), {include_blank: true}, {autofocus: true, class: "form-control"}) %>
        </div>
        <div class="actions">
          <%= f.submit "Create Course", class: "btn btn-primary" %>
        </div>
    <% end %>
  </div>
</div>
